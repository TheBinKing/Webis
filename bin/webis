#!/usr/bin/env python3
# -*- coding: utf-8 -*-

"""
Webis command-line interface
"""

import os
import sys

# 添加项目根目录到Python路径
script_dir = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
sys.path.insert(0, script_dir)

# 导入CLI模块
try:
    from src.cli.cli import cli_app
except ImportError as err:
    sys.stderr.write('导入Webis CLI模块时出错: {}\n'.format(err))
    sys.exit(1)

if __name__ == '__main__':
    # 运行CLI应用
    cli_app()
